<Window x:Class="Wpf_LataVelhaApp.View.CarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Wpf.ViewModel"
        mc:Ignorable="d"
        Title="Car's List" Height="450" Width="800">
    <Window.Resources>
        <viewModel:CarViewModel x:Key="MainViewModel" />
    </Window.Resources>
    <Grid DataContext="{StaticResource ResourceKey=MainViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" x:Name= "CarList" ItemsSource="{StaticResource ResourceKey=MainViewModel}" DisplayMemberPath="Plate"
                IsSynchronizedWithCurrentItem="True"></ListView>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Brand :"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Text="Model :"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="3" Text="Color :"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="4" Text="Year :"></TextBlock>

        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Brand}"></TextBox>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Path=Model}"></TextBlock>
        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Color}"></TextBox>
        <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding Path=Year}"></TextBlock>
    </Grid>
</Window>
